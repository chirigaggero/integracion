<!-- content -->
<div class="container" style="margin-top:70px;">

  <div class="page-header">
    <h1>Grupo <%= image_tag("8BallSmall.png", width: 30, height: 30) %> E-Commerce</h1>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-shopping-cart"></i> Carrito de Compras</h3>
    </div>
    <div class="panel-body">
    	
	<ul class="list-group">
  <% if session[:azucar]%>
      <li class="list-group-item">
      <span class="badge">Precio: <%= @precio_azucar*session[:azucar].to_i %></span>
      <span class="badge">Cantidad: <%= session[:azucar] %></span>
      Ázucar
    </li>
  <% end %>
  <% if session[:madera]%>
      <li class="list-group-item">
      <span class="badge">Precio: <%= @precio_madera*session[:madera].to_i %></span>
      <span class="badge">Cantidad: <%= session[:madera] %></span>
      Madera
    </li>
  <% end %>
  <% if session[:celulosa]%>
      <li class="list-group-item">
      <span class="badge">Precio: <%= @precio_celulosa*session[:celulosa].to_i %></span>
      <span class="badge">Cantidad: <%= session[:celulosa] %></span>
      Celulosa
    </li>
  <% end %>
  <% if session[:chocolate]%>
      <li class="list-group-item">
      <span class="badge">Precio: <%= @precio_chocolate*session[:chocolate].to_i %></span>
      <span class="badge">Cantidad: <%= session[:chocolate] %></span>
      Chocolate
    </li>
  <% end %>
  <% if session[:pastadesemola]%>
      <li class="list-group-item">
      <span class="badge">Precio: <%= @precio_pastadesemola*session[:pastadesemola].to_i %></span>
      <span class="badge">Cantidad: <%= session[:pastadesemola] %></span>
      Pasta de Sémola
    </li>
  <% end %>
  <% if session[:azucar].nil? and session[:madera].nil? and session[:celulosa].nil? and session[:chocolate].nil? and session[:pastadesemola].nil? %>
      <li class="list-group-item">
      No hay nada en el carrito
    </li>
  <% end %>
	</ul>
  <form action="/ecommerce/shoppingcart" method="get" class="form-inline">
    <div class="form-group">
      <label for="codigoDescuento">Codigo de Descuento</label>
      <input type="text" class="form-control" id="codigoDescuento" name="codigoDescuento" placeholder="(Opcional) Ingresa un codigo de descuento">
    <input type="submit" class="btn btn-default" value="Aplicar">
  </form>
  <br>
  <br>
  <code><strong>TOTAL:</strong> <%= $total_compra %></code>
	<hr>
	<a href="/ecommerce/checkout"class="btn btn-success"><i class="fa fa-credit-card"></i> Pagar</a>
  <a href="/ecommerce/shoppingcart/destroy" class="btn btn-danger" role="button" id="shoppingcart_destroy" data-no-turbolink>Vaciar Carrito</a>

    </div>
  </div>


</div>
    
<footer class="footer">
  <div class="container" style="text-align: center;">
