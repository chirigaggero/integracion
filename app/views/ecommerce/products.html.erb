<!-- content -->
<div class="container" style="margin-top:70px;">

  <div class="page-header">
    <h1>Grupo <%= image_tag("8BallSmall.png", width: 30, height: 30) %> E-Commerce</h1>
  </div>

  <% if flash[:notice] %>
    <div id="alert-message" class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Mensaje:</strong> <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-cubes"></i> Catálogo de Productos</h3>
    </div>
    <div class="panel-body">
      <div class="products">
        <div class="row">

        <% ProductInfo.all.each do |producto| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag(producto.img, width: 242, height: 200) %>
              <div class="caption">
                <h3 id="thumbnail-label"><%= producto.nombre %><a class="anchorjs-link" href="#thumbnail-label"><span class="anchorjs-icon"></span></a></h3>
                <code>Stock: <%= Bodega.cantidad_total_sku producto.sku %></code>
                <p><%= producto.descripcion %></p>
                <p>
                  <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Cantidad</span>
                    <input type="text" class="form-control" placeholder="Cantidad que deseas" aria-describedby="basic-addon1" id="<%= producto.product_id %>">
                  </div>
                  <br>
                  <a href="/ecommerce/shoppingcart/<%= producto.product_id %>/0" class="btn btn-primary" role="button" id="<%= producto.product_id %>_buy" data-no-turbolink>Agregar al Carro de Compras</a>
                  <a href="#" class="btn btn-default" role="button">Información</a>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        </div>
      </div>
    </div>
  </div>


</div>
    
