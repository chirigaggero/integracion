<!-- content -->
<div class="container" style="margin-top:70px;">

  <div class="page-header">
    <h1>Grupo <%= image_tag("8BallSmall.png", width: 30, height: 30) %> E-Commerce</h1>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
    <% if @procesoCompleto %>
        <h3 class="panel-title"><i class="fa fa-check-circle"></i> Compra Exitosa</h3>
      <% else %>
        <h3 class="panel-title"><i class="fa fa-truck"></i> Datos Despacho</h3>
      <% end %>
    </div>
    <div class="panel-body">
    <% if @procesoCompleto %>
    	Compra realizada exitosamente, gracias por preferirnos <i class="fa fa-smile-o"></i>!
      <% else %>
      <code><strong>Por favor, completa los siguientes datos para despacho de tu producto</strong></code>
      <br>
      <form action="/ecommerce/ok" method="get">
        <div class="form-group">
          <label for="direccionDespacho">Dirección de Despacho</label>
          <input type="text" class="form-control" id="direccionDespacho" name="direccionDespacho" placeholder="Ingresa la direccion de despacho">
        </div>
        <div class="form-group">
          <label for="fechaEntrega">Fecha de Entrega</label>
          <input type="text" class="form-control" id="fechaEntrega" name="fechaEntrega" placeholder="Ingresa la fecha de entrega deseada">
        </div>
        <input type="submit" class="btn btn-default" value="Enviar">
      </form>
      <% end %>
    </div>
  </div>


</div>
    
